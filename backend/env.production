# Production Environment Configuration for AgentTrace
# Copy this file to .env and update with your production values

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Secret Key (REQUIRED FOR PRODUCTION)
# Generate a strong secret key: openssl rand -hex 32
JWT_SECRET_KEY=your_super_secure_jwt_secret_key_here_minimum_32_characters

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_TRACE_SIZE=5242880

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Supabase Configuration (REQUIRED FOR PRODUCTION)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Database Connection Pool
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=False

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Sentry Error Tracking (Optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Email Service (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Redis Cache (Optional)
REDIS_URL=redis://localhost:6379

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# Next.js Configuration
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Environment
NODE_ENV=production
PYTHON_ENV=production

# SSL/TLS Configuration
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Health Check
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Database Backup
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# =============================================================================
# SECURITY HEADERS
# =============================================================================

# Content Security Policy
CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'

# Additional Security Headers
SECURE_HEADERS=True
HSTS_MAX_AGE=31536000
